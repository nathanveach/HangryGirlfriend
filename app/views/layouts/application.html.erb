<!DOCTYPE html>
<html>
  <head>
    <title>HangryGf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Meta tags and hidden image for social media sharing featured image -->
    <img src="//i.ibb.co/0G85Lqz/hangrygf-OG.jpg" class="meta-img"/>
    <meta property="og:image" content="https://i.ibb.co/0G85Lqz/hangrygf-OG.jpg">
    <meta property="og:image:type" content="image/jpeg">
    <meta property="og:image:width" content="200">
    <meta property="og:image:height" content="200">

    <%= javascript_pack_tag 'index' %>
    <% if Rails.env.production? %>
      <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
